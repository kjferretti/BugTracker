                    <button type="button" class="btn btn-sm btn-info" onclick="location.href='@Url.Action("Create")';">New ticket</button>
                    }
                    @*<button type="button" class="btn btn-sm btn-default">
                        <em class="fa fa-user-plus"></em>
                    </button>
                    <button type="button" class="btn btn-sm btn-default">
